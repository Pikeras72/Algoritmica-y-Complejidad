public class main {
    public static void main(String[] args) {
        System.out.println(sumaPositivos(new int[]{5,5,7,7,8,9,9,10,10}));
    }
    public static int maxAux (int[] vector, int i0, int iN){
        if(i0 == iN){
            return vector[i0];
        }
        int k = (i0 + iN)/2;
        if(vector[k]!=vector[k+1] && vector[k]!=vector[k-1]) {
            return vector[k];
        }else if (vector[k]!= vector[k+1] && (iN-k)%2 != 0){
            return maxAux(vector,k+1,iN);
        }else if (vector[k]!= vector[k+1]){
            return maxAux(vector,0,k-2);
        }else if (vector[k]!= vector[k-1] && k%2 != 0){
            return maxAux(vector,0,k-1);
        }else{
            return maxAux(vector,k+2,iN);
        }
    }
    public static int sumaPositivos(int[] vector){
        return maxAux(vector,0,vector.length-1);
    }
}

//COMPLEJIDAD   1*T(N/2)+O(1) = Log(n)
